<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/register_profile_picture"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="170dp"
                app:layout_constraintHorizontal_bias="0.497"
                android:src="@drawable/default_profile_picture"
                app:shapeAppearanceOverlay="@style/CircularImageView" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/register_choose_profile_picture_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/register_profile_picture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="20dp"
                android:text="Choose picture"
                android:textAllCaps="false"/>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_first_name_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/register_choose_profile_picture_button"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="First Name"
                app:endIconMode="clear_text"
                app:startIconTint="@color/black"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/register_last_name_text_layout">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_first_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_last_name_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/register_choose_profile_picture_button"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Last Name"
                app:endIconMode="clear_text"
                app:startIconTint="@color/black"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/register_first_name_text_layout"
                app:layout_constraintHorizontal_bias="0.5">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_last_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Email Address"
                app:endIconMode="clear_text"
                app:startIconTint="@color/black"
                android:layout_marginVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/register_first_name_text_layout"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_email_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_phone_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Phone Number"
                app:endIconMode="clear_text"
                app:startIconTint="@color/black"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/register_email_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:layout_constraintStart_toEndOf="@+id/textInputLayout"
                app:layout_constraintHorizontal_bias="0.5"
                app:helperText="Ex: 9991234567"
                app:helperTextTextColor="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_phone_text_view"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="10" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="+98"
                app:endIconMode="clear_text"
                app:startIconTint="@color/black"
                android:layout_marginVertical="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintTop_toBottomOf="@id/register_email_layout"
                app:layout_constraintEnd_toStartOf="@+id/register_phone_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                android:id="@+id/textInputLayout"
                app:layout_constraintHorizontal_bias="0.5"
                android:enabled="false">

            <com.google.android.material.textfield.TextInputEditText
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/register_phone_layout"
                android:hint="Password"
                app:endIconMode="password_toggle"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_password_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="?attr/colorPrimary" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/register_password_layout"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                android:drawableStart="@drawable/ic_warning"
                android:drawablePadding="5dp"
                android:text="Warning: We recommend you to use a strong password consisting of at least 8 characters."
                android:textColor="?attr/colorPrimary"/>


        <com.google.android.material.button.MaterialButton
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/register_password_layout"
                android:layout_marginTop="100dp"
                android:text="Create a new profile"
                android:textAllCaps="false"
                app:cornerRadius="20dp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>



    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:liftOnScroll="true"
            android:id="@+id/app_bar_layout_register">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:expandedTitleTextAppearance="@style/TextAppearance.App.CollapsingToolbar.Expanded"
                app:contentScrim="?attr/colorPrimary"
                app:statusBarScrim="?attr/colorPrimaryVariant"
                app:expandedTitleGravity="bottom|center_horizontal"
                android:background="?attr/colorPrimary">

            <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/top_app_bar_register"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:stateListAnimator="@null"
                    app:title="Register"
                    style="@style/ThemeOverlay.MaterialComponents.BottomAppBar.Primary.MyApp"
                    app:navigationIcon="@drawable/ic_arrow_back"
                    android:backgroundTint="?attr/colorPrimary">

            </com.google.android.material.appbar.MaterialToolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>