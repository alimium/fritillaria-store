<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp"
        app:cardCornerRadius="20dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_bookmark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/feed_card_profile_picture"
                app:layout_constraintBottom_toBottomOf="@+id/feed_card_profile_picture"
                android:layout_marginEnd="12dp"
                android:id="@+id/feed_card_bookmark_icon"/>





        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/feed_card_profile_picture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:padding="4dp"
                app:srcCompat="@drawable/default_profile_picture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/CircularImageView"/>

        <TextView
                android:id="@+id/feed_card_top_title_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintTop_toTopOf="@+id/feed_card_profile_picture"
                app:layout_constraintStart_toEndOf="@+id/feed_card_profile_picture"
                app:layout_constraintEnd_toStartOf="@+id/feed_card_bookmark_icon" />

        <TextView
                android:id="@+id/feed_card_post_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="#203045"
                android:textColor="?attr/colorPrimary"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:layout_constraintStart_toEndOf="@+id/feed_card_profile_picture"
                app:layout_constraintBottom_toBottomOf="@+id/feed_card_profile_picture"
                app:layout_constraintTop_toBottomOf="@+id/feed_card_top_title_textview"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toStartOf="@+id/feed_card_bookmark_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>



        <ImageView
                android:id="@+id/feed_card_main_item_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/default_profile_picture"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">


            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/feed_title_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke_color">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                    <TextView
                            android:id="@+id/feed_card_bottom_title_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Title"
                            android:textSize="20sp"
                            android:layout_gravity="center" />

                    <TextView
                            android:id="@+id/feed_card_description_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="32dp"
                            android:justificationMode="inter_word"
                            android:text="item description. item description. item description. item ."
                            android:textSize="15sp"
                            android:textColor="?attr/colorPrimary"
                            app:layout_constraintTop_toBottomOf="@+id/feed_card_bottom_title_textview" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/feed_size_card"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke_color"
                    app:layout_constraintTop_toBottomOf="@id/feed_title_card"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@+id/feed_title_card"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/feed_gender_card"
                    app:layout_constraintHorizontal_chainStyle="spread_inside">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                    <TextView
                            android:id="@+id/feed_size_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="XL"
                            android:textSize="50sp"
                            android:textColor="?attr/colorPrimary"
                            android:layout_gravity="center"
                            android:layout_above="@id/LO_feed_size"
                            android:layout_centerInParent="true" />

                    <TextView
                            android:id="@+id/LO_feed_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="Size"
                            android:textSize="13sp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/feed_gender_card"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke_color"
                    app:layout_constraintTop_toBottomOf="@id/feed_title_card"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@+id/feed_size_card"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/feed_category_card">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                    <TextView
                            android:id="@+id/feed_gender_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Women"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="?attr/colorPrimary"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true" />

                    <TextView
                            android:id="@+id/LO_feed_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="Made For"
                            android:textSize="13sp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/feed_category_card"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke_color"
                    app:layout_constraintTop_toBottomOf="@id/feed_title_card"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@+id/feed_gender_card"
                    app:layout_constraintEnd_toEndOf="@+id/feed_title_card"
                    app:layout_constraintHorizontal_bias="0.5">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                    <TextView
                            android:id="@+id/feed_category_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accessory"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            android:textColor="?attr/colorPrimary"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true" />

                    <TextView
                            android:id="@+id/LO_feed_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="Category"
                            android:textSize="13sp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true" />


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/feed_city_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke_color"
                    app:layout_constraintTop_toBottomOf="@id/feed_gender_card"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                    <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available in: "
                            android:drawableStart="@drawable/ic_location" />

                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/feed_card_city_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delft, Netherlands"
                            android:textColor="?attr/colorPrimary"/>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/feed_price_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke_color"
                    app:layout_constraintTop_toBottomOf="@id/feed_city_card"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@+id/feed_city_card">


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/feed_card_price_final_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="39.99"
                            android:textSize="35sp"
                            android:textColor="?attr/colorPrimary"
                            android:drawableStart="@drawable/ic_dollar_large"
                            android:textAlignment="center" />

                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/feed_card_price_raw_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="5dp"
                            android:text="47.99"
                            android:foreground="@drawable/strike_through" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/feed_card_call"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/stroke_color"
                    android:backgroundTint="?attr/colorSecondary"
                    app:layout_constraintTop_toBottomOf="@id/feed_city_card"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@+id/feed_price_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/feed_price_card">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/feed_card_call_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Seller"
                            android:textSize="15sp"
                            android:layout_marginStart="15dp"
                            android:textColor="?attr/colorOnSecondary"
                            android:layout_gravity="center"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_call"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>




        </androidx.constraintlayout.widget.ConstraintLayout>





    </LinearLayout>


</com.google.android.material.card.MaterialCardView>