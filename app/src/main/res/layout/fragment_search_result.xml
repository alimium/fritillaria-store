<?xml version="1.0" encoding="UTF-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".contents.pages.findpage.FindResultFragment"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">




    <LinearLayout
            android:id="@+id/find_no_result_layout"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginTop="100dp">

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:textSize="40sp"
                android:text="No Products Match Your Desire"
                android:drawableTop="@drawable/ic_sad_face"
                android:gravity="center_horizontal"
                />

        <TextView
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:textSize="20sp"
                android:text="Tip: Try another keyword or make a more general search."
                app:drawableTopCompat="@drawable/ic_info_small"
                android:textAlignment="center"
                android:paddingHorizontal="40dp" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/find_item_list_recyclerview"
        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="10dp"
        />


    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:liftOnScroll="true">

        <com.google.android.material.button.MaterialButton
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:text="FILTERS"
                android:id="@+id/find_filter_button"
                app:cornerRadius="0dp"
                android:paddingVertical="10dp"
                android:background="?attr/colorPrimary"
                android:layout_margin="0dp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:paddingHorizontal="20dp"
                android:id="@+id/find_filter_expandable_layout"
                android:background="@drawable/filter_section_background"
                android:paddingBottom="20dp">


            <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/find_filter_category"
                    style="@style/filterBoxes"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    android:hint="Pick A Category"
                    android:elevation="10dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/find_filter_category_autocomplete"
                        android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/find_filter_gender"
                    style="@style/filterBoxes"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    android:hint="Who Is This For?"
                    android:elevation="10dp"
                    android:layout_marginTop="4dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/find_filter_gender_autocomplete"
                        android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/find_filter_sort"
                    style="@style/filterBoxes"
                    app:boxCornerRadiusTopStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    android:hint="Sort"
                    android:elevation="10dp"
                    android:layout_marginTop="4dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/find_filter_sort_autocomplete"
                        android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>