<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#661F57</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFFCF7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#661F57</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#b2b2b2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">#080206</item>
        <item name="colorSurface">#141414</item>

    </style>


    <style name="SplashScreen" parent="Theme.OnlineStore">
        <item name="android:windowBackground">
            @drawable/splash_screen_night
        </item>
    </style>

</resources>