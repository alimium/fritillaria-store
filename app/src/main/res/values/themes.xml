<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3D0C33</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/floral_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3D0C33</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/floral_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/floral_white</item>
        <item name="colorSurface">@color/light_white</item>
    </style>



    <style name="SplashScreen" parent="Theme.OnlineStore">
        <item name="android:windowBackground">
            @drawable/splash_screen_light
        </item>
    </style>

    <style name="filterBoxes" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/floral_white</item>
    </style>

</resources>